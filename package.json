{
  "name": "inventory-dashboard",
  "version": "1.0.0",
  "description": "Garment Inventory Management Dashboard",
  "main": "server/index.js",
  "scripts": {
    "start": "npm run client",
    "dev": "npm run client",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "npm run build && firebase deploy",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:hosting": "npm run build && firebase deploy --only hosting",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd functions && npm install"
  },
  "keywords": [
    "inventory",
    "dashboard",
    "garment",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}